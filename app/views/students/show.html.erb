              <% @social_links = ["github", "codeschool", "coderwall", "stackoverflow", "treehouse"] %>
              <% @social_links.each do |item| %>
                <% if @socials.find_by_name("#{item}").id % 5 == 0 %>
                  <div class="one_fifth last">
                <% else %>
                  <div class="one_fifth">
                <% end %>
                  <a href="<%= @socials.find_by_name("#{item}").link %>">
